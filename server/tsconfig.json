{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./**/*",
  ],
  "exclude": [
    "./node_modules",
  ],
}