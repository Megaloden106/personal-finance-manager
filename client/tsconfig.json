{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["d3", "node"]
  },
  "exclude": ["build", "node_modules"]
}